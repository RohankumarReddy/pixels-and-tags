<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Note Here!!</title>
  <script src="https://cdn.tailwindcss.com"></script> <!-- Tailwind CDN -->
</head>
<body>
  <div class="main w-full min-h-screen bg-zinc-900 text-white">
    
    <!-- Form Section -->
    <div class="form p-4">
      <form action="/create" method="POST">
        <input class="block px-5 py-2 bg-zinc-800 text-white w-full mb-3 rounded" type="text" name="title" placeholder="Title goes here">
        <textarea class="block px-5 py-2 bg-zinc-800 text-white w-full resize-none mb-3 rounded" name="details" placeholder="Note here" rows="5"></textarea>
        <input class="px-5 py-2 bg-blue-600 text-white rounded cursor-pointer hover:bg-blue-700" type="submit" value="Submit">
      </form>
    </div>
    
    <!-- Tasks Section -->
    <div class="tasks p-10 flex gap-4 flex-wrap">
      <% if (files.length > 0) { %>
        <% files.forEach(function(file) { %>
          <div class="task w-72 px-3 py-4 rounded-md bg-zinc-800 mb-4">
            <h1 class="text-white text-2xl tracking-tight mb-2"><%= file.replace(".txt", "") %></h1>
            <a class="text-blue-500 underline" href="/files/<%=file %>">Read more</a>
          </div>
        <% }) %>
      <% } else { %>
        <h3 class="text-zinc-400">No notes yet</h3>
      <% } %>
    </div>

  </div>
</body>
</html>

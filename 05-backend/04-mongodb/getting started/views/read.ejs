<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Read</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="/stylesheets/style.css" />
</head>
<body>
  <div class="min-h-screen w-full bg-zinc-800 p-10 text-white">
    <a class="text-2xl text-blue-800" href="/">Go back</a>
    <h1 class="text-3xl mb-3">All users</h1>
    
    <div class="users flex gap-2 flex-wrap">
      <% users.forEach(function(user) { %>
        <div class="user max-w-72 p-3 bg-zinc-700 rounded">
          <div class="w-full h-52 bg-red-400 rounded">
            <img class="w-full h-full object-cover" src="<%=user.image%>" alt="">
          </div>
          <h3 class="text-2xl"> <%= user.name %></h3>
          <h4><%= user.email %></h4>
          <div class="flex gap-3 mt-2">
            <a class="text-blue-800 bg-white px-2 py-1 rounded" href="/edit/<%= user._id %>">Edit user</a>
            <a class="text-blue-800 bg-white px-2 py-1 rounded" href="/delete/<%=user._id %>">Delete user</a>
          </div>
        </div>
      <% }); %>
    </div>
  </div>
</body>
</html>
